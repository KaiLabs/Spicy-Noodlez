<h1>Lost & Found</h1>

<body>
  <center>
<% if @lostandfounds.present?%>
 <% @lostandfounds.each do |lostandfound| %>
  <div class="card">
    <div class="card-content">
        Title: <%= lostandfound.title %>
        <br>
        Item: <%= lostandfound.item %>
        <br>
        Location Found: <%= lostandfound.foundlocation %>
        <br>
        When did you find it:<%= Common.readable_timestamps(lostandfound.foundtime)%>
        <br>
        Notes: <%= lostandfound.notes %>
        <br>
        <%= link_to 'Show', lostandfound %>
        <% if current_user && current_user.id == lostandfound.user_id %>
        <%= link_to 'Edit', edit_lostandfound_path(lostandfound) %>
        <%= link_to 'Destroy', lostandfound, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
    </div>
  </div>
  <br>
  <br>
  <%end%>
<% else %>
  <% if params[:search] %>
  <h4> There are no items containing the term: <%= params[:search] %> </h4>
  <%end%>
  <h4> No items have been lost or found :/ </h4>
<% end %>
</center>
</body>

