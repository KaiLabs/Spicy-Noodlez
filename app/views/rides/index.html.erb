<p id="notice"><%= notice %></p>
<h1>Rides</h1>
<body> 

        <!- Sorting ->
<div>
  Sort by: <br>
  <!- Sets params[:sorting] according which button is clicked ->
  <%= link_to 'Date', rides_path(:sorting => 'when')%> | 
  <%= link_to 'Available Seats', rides_path(:sorting => 'seats')%> | 
  <%= link_to 'Driving/Riding', rides_path(:sorting => 'role')%> | 
  <%= link_to 'Test', rides_path(:sorting => 'test')%> | 
  <!- Button to clear params[:sorting] ->
  <%= link_to 'Clear sorting', rides_path(:sorting => nil)%>
</div>

<!- end of sorting ->


<div class="row">
  <% if @rides.present? %>
    <% @rides.each do |ride| %>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 col-xxs-12">
          <div class="tm-home-box-2">           
            <%= image_tag("http://www.clipartkid.com/images/128/car-ride-http-www-wpclipart-com-transportation-car-ride-png-html-PrEKlQ-clipart.png", :class => "img-responsive") %>
            <h3><%= ride.title %> <br> <br>
            From <strong> <%= ride.origin %> </strong>to <strong><%= ride.destination %></strong> </h3>
            <p class="tm-date"><%=Common.readable_timestamps(ride.when) %> </p>
            <div class="tm-home-box-2-container">
              <a href="#" class="tm-home-box-2-link"><i class="fa fa-heart tm-home-box-2-icon border-right"></i></a>
              <a href="#" class="tm-home-box-2-link"><span class="tm-home-box-2-description">Ride</span></a>
              <a href="#" class="tm-home-box-2-link"><i class="fa fa-edit tm-home-box-2-icon border-left"></i></a>
            </div>
          </div>
          <br>
        </div>
        <% end %> 
      <% end %> 
      </div>


</body>
  <center>
    <div class='container'>


<% if @rides.present? %>
  <% @rides.each do |ride| %>
      <div class='card'>
        <div class="card-content">
          Where to? <%=ride.destination%>
          <br>
          From where? <%=ride.origin%>
          <br>
          When? <%=Common.readable_timestamps(ride.when) %>
          <br> 
          Role: <%=ride.role%>
          <br>
          Notes: <%=ride.notes %>
          <br>
          Seats Available: <%= ride.seats %>
          <br>
          <%= link_to "Show", ride %>
          <% if current_user && current_user.id == ride.user_id %>
            <%= link_to "Edit", edit_ride_path(ride) %>
            <%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
      <br> 
      <br> 
    <%end%>
<% else %>
  <% if params[:search] %>
  <h4> There are no rides containing the term: <%= params[:search] %> </h4>
  <%end%>
  <h4> No upcoming rides have been posted :/ </h4>
<% end %>
  </div>
</center>



