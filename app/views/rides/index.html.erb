<h1>Rides</h1>


<body> 
  <center>
    <div class='container'>
  <% @rides.each do |ride| %>
      <div class='card'>
        <div class="card-content">
          Where to? <%=ride.destination%>
          <br>
          From where? <%=ride.origin%>
          <br>
          When? <%=Common.readable_timestamps(ride.when) %>
          <br> 
          Role: <%=ride.role%>
          <br>
          Notes: <%=ride.notes %>
          <br>
          <%= link_to "Show", ride %>
          <% if current_user.id == ride.user_id %>
            <%= link_to "Edit", edit_ride_path(ride) %>
            <%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
      <br> 
      <br> 
    <%end%>
  </div>
</center>

