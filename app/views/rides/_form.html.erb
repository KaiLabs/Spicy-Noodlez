<%= form_for(ride) do |f| %>
  <% if ride.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ride.errors.count, "error") %> prohibited this ride from being saved:</h2>

      <ul>
      <% ride.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :destination %>
    <%= f.text_field :destination %>
  </div>

  <div class="field">
    <%= f.label :origin %>
    <%= f.text_field :origin %>
  </div>

  <div class="field">
    <%= f.label :when %>
    <span> <%= f.datetime_select :when %> </span>
  </div>

  <div class="field">
    <%= f.label :role %>
    <%= f.select(:role, options_for_select([['Offering a Ride', "Driver"], ['Looking for a Ride', "Rider"]])) %>
  </div>

  <div class="field">
    <%= f.label :seats %>
    <%= f.select(:seats, options_for_select(0..10)) %>
  </div>


  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>

  <div class="actions">
    <%= f.submit "Submit!"%>
  </div>
<% end %>



