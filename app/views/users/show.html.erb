            </ul> -->
          </header>

        <!-- Main -->
          <section id="main">

            <!-- Thumbnails -->
              <section class="thumbnails">
                <div>
                  <% if @user.events.any? %>
                    <% @user.events.each do |event| %>
                      <%= link_to image_tag(event.avatar.url(:medium)) + event.title, event%>
                    <% end %>
                  <% end %>
                </div>
                <div>
                  <% if @user.rides.any? %>
                    <% @user.rides.each do |ride| %>
                      <a> 
                        <%= image_tag "http://www.clipartkid.com/images/128/car-ride-http-www-wpclipart-com-transportation-car-ride-png-html-PrEKlQ-clipart.png" %>
                        <h3><%= ride.title %></h3>
                      </a>
                    <% end %>
                  <% end %>
                </div>
                <div>
                  <% if @user.lostandfounds.any? %>
                    <% @user.lostandfounds.each do |lostandfound| %>
                      <%=link_to image_tag(lostandfound.avatar.url(:medium)) + lostandfound.title, lostandfound %>
                    <% end %>
                  <% end %>
                </div>
                  <div>
                  <% if @user.trading_posts.any? %>
                    <% @user.trading_posts.each do |trading_post| %>
                      <%= link_to image_tag(trading_post.avatar.url(:medium)) + trading_post.title, trading_post %>
                    <% end %>
                  <% end %>
                </div>
              </section>

          </section>

        <!-- Footer -->
          <footer id="footer">
            <p>&copy; Untitled. All rights reserved. Design: <a href="http://templated.co">TEMPLATED</a>. Demo Images: <a href="http://unsplash.com">Unsplash</a>.</p>
          </footer>

      </div>

